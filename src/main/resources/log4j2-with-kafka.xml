<?xml version="1.0"?>
<!DOCTYPE Configuration>
<Configuration>
	<Properties>
		<Property name="logs.kafka.bootstrap.servers">${sys:kafka.bootstrap.servers:-localhost:9092}</Property>
	</Properties>
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%style{%d %25.25t %60.60c{1.}}{cyan} %highlight{%p %m}%n%throwable" />
		</Console>
		<RollingFile name="APPLICATION"
			fileName="./logs/application.log"
			filePattern="./logs/application.log.%d{yyyy-MM-dd}">
			<PatternLayout
				pattern="%d %c %t%X{request}%X{url} %p %m%n%throwable{10}"
				charset="UTF-8" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="ERROR"
			fileName="./logs/application-error.log"
			filePattern="./logs/application-error.log.%d{yyyy-MM-dd}">
			<ThresholdFilter level="ERROR" />
			<PatternLayout
				pattern="%d %c %t%X{request}%X{url} %p %m%n" charset="UTF-8" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="SQL" fileName="./logs/sql.log"
			filePattern="./logs/sql.log.%d{yyyy-MM-dd}">
			<ThresholdFilter level="ALL" />
			<PatternLayout
				pattern="%d %c %t%X{request}%X{url} %p %m%n" charset="UTF-8" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="REST" fileName="./logs/rest.log"
			filePattern="./logs/rest.log.%d{yyyy-MM-dd}">
			<ThresholdFilter level="ALL" />
			<PatternLayout
				pattern="%d %t%X{request} %X{method}%X{url} %m%n" charset="UTF-8" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="ACCESS" fileName="./logs/access.log"
			filePattern="./logs/access.log.%d{yyyy-MM-dd}">
			<PatternLayout
				pattern="%d %X{username}@%X{remoteAddr} %X{method}%X{url}%X{userAgent}%X{referer}%X{request}%X{responseTime}%n"
				charset="UTF-8" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="ACCESS-WARN"
			fileName="./logs/access-warn.log"
			filePattern="./logs/access-warn.log.%d{yyyy-MM-dd}">
			<ThresholdFilter level="WARN" />
			<PatternLayout
				pattern="%d %X{username}@%X{remoteAddr} %X{method}%X{url}%X{userAgent}%X{referer}%X{request} %m%n"
				charset="UTF-8" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>

		<Kafka name="KAFKA-REST" topic="app.logs.rest">
			<PatternLayout
				pattern="%d %t%X{request}%X{server} %X{method}%X{url} %m%n"
				charset="UTF-8" />
			<Property name="bootstrap.servers">${sys:logs.kafka.bootstrap.servers}</Property>
		</Kafka>
		<Kafka name="KAFKA-ACCESS" topic="app.logs.access">
			<PatternLayout
				pattern="%d %X{username}@%X{remoteAddr} %X{method}%X{url}%X{userAgent}%X{referer}%X{request}%X{server}%X{responseTime}"
				charset="UTF-8" />
			<Property name="bootstrap.servers">${sys:logs.kafka.bootstrap.servers}</Property>
		</Kafka>
		<Kafka name="KAFKA-APPLICATION" topic="app.logs.application">
			<PatternLayout
				pattern="%d %c %t%X{request}%X{server}%X{url} %p %m%th{10}"
				charset="UTF-8" />
			<Property name="bootstrap.servers">${sys:logs.kafka.bootstrap.servers}</Property>
		</Kafka>
	</Appenders>

	<Loggers>
		<Logger name="org.hibernate.SQL" additivity="false">
			<AppenderRef ref="SQL" />
		</Logger>
		<Logger name="org.hibernate.type.descriptor.sql.BasicBinder"
			additivity="false">
			<AppenderRef ref="SQL" />
		</Logger>
		<Logger name="org.springframework.jdbc.core" additivity="false">
			<AppenderRef ref="SQL" />
		</Logger>
		<Logger name="rest" additivity="false">
			<AppenderRef ref="REST" />
			<AppenderRef ref="KAFKA-REST" />
		</Logger>
		<Logger name="access" level="INFO" additivity="false">
			<AppenderRef ref="ACCESS" />
			<AppenderRef ref="KAFKA-ACCESS" />
		</Logger>
		<Logger name="access-warn" level="WARN" additivity="false">
			<AppenderRef ref="ACCESS-WARN" />
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="CONSOLE" />
			<AppenderRef ref="APPLICATION" />
			<AppenderRef ref="ERROR" />
			<AppenderRef ref="KAFKA-APPLICATION" />
		</Root>
	</Loggers>

</Configuration>
